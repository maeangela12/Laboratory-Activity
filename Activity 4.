class Program
{
    static void Main()
    {
        Console.WriteLine("Enter 7 stock prices (one per day):");
        decimal[] prices = new decimal[7];


        for (int i = 0; i < 7; i++)
        {
            while (!decimal.TryParse(Console.ReadLine(), out prices[i]) || prices[i] <= 0)
            {
                Console.Write("Invalid price. Enter positive decimal value for day {0}: ", i + 1);
            }
        }

        Console.WriteLine("\nDay | Price  | Change% |");
        Console.WriteLine("----|--------|---------|");

        decimal maxGain = 0;
        int bestDay = 0;

        for (int i = 1; i < 7; i++)
        {
            decimal change = prices[i] - prices[i - 1];
            decimal percent = (change / prices[i - 1]) * 100;

            Console.WriteLine($"{i + 1,3} | {prices[i],-6:0.00} | {percent,6:0.00}% |");

            if (change > maxGain)
            {
                maxGain = change;
                bestDay = i;
            }
        }

        Console.WriteLine($"\nBiggest gain on Day {bestDay + 1} ({maxGain:0.00} increase)");
    }
}
