class Program
{
    static void Main()
    {

        const int transactionCount = 20;
        decimal[] transactions = new decimal[transactionCount];
        Console.WriteLine("Enter at least 20 transaction amounts (one per line):");

        
        for (int i = 0; i < transactionCount; i++)
        {
            while (true)
            {
                Console.Write($"Transaction {i + 1}: ");
                if (decimal.TryParse(Console.ReadLine(), out decimal amount))
                {
                    transactions[i] = amount;
                    break;
                }
                else
                {
                    Console.WriteLine("Invalid input. Please enter a valid decimal value.");
                }
            }
        }

        
        decimal total = 0;
        Console.WriteLine("\nTransactions above 10,000:");
        for (int i = 0; i < transactionCount; i++)
        {
            if (transactions[i] > 10000)
            {
                Console.WriteLine($"{transactions[i]:F2}");
                total += transactions[i];
            }
        }

        
        Console.WriteLine($"\nTotal of qualifying transactions: {total:F2}");
    }
}
